<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl transition duration-300 border border-gray-100 dark:border-gray-700">

    {# Title #}
    <h2 class="text-2xl font-semibold mb-2 text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
        <a href="{{ path('app_micro_post_show', { id: post.id }) }}">
            {{ post.title }}
        </a>
    </h2>

    {# Text/Content #}
    <p class="text-gray-700 dark:text-gray-300 mb-4">
        {{ post.text }}
    </p>

    {# Metadata and Actions Section #}
    <div class="flex justify-between items-center text-sm border-t pt-3 mt-4 border-gray-100 dark:border-gray-700">

        {# Date and User Info #}
        <div class="flex flex-col text-gray-500 dark:text-gray-400">
            <span class="mb-1">Published: {{ post.created | date("M j, Y") }}</span>
            <a href="#" class="text-xs hover:text-indigo-600 dark:hover:text-indigo-400">{{ post.author.email }}</a>

        </div>

        {# Edit #}
        <div>
            <a href="{{ path('app_micro_post_edit', { post: post.id }) }}" class="text-sm font-medium text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 transition duration-150">
                ‚úçÔ∏è Edit
            </a>

        </div>


        <div>
            <a href="{{ path('app_micro_post_comment', { post: post.id }) }}" class="text-sm font-medium text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 transition duration-150">
                üí¨ Comment
                <span class="inline-block px-2 py-0.5 ml-1 rounded-full text-xs font-medium bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200">
                            ({{ post.comments|length }})
                        </span>
            </a>

        </div>

        {# Like Counter #}
        <div>
            <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-red-500 transition duration-150">
                ‚ù§Ô∏è
                <span class="inline-block px-2 py-0.5 ml-1 rounded-full text-xs font-medium bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200">
                            0
                        </span>
            </a>
        </div>
    </div>
</div>

