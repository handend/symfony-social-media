<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl transition duration-300 border border-gray-100 dark:border-gray-700">

    {# Title #}
    <h2 class="text-2xl font-semibold mb-2 text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
        <a href="{{ path('app_micro_post_show', { id: post.id }) }}">
            {{ post.title }}
        </a>
    </h2>

    {# Text/Content #}
    <p class="text-gray-700 dark:text-gray-300 mb-4 line-clamp-3">
        {{ post.text }}
    </p>

    {# Metadata Section #}
    <div class="flex justify-between items-end text-xs text-gray-500 dark:text-gray-400 border-t pt-3 border-gray-100 dark:border-gray-700">
        <div class="flex flex-col">
            <span class="font-medium text-gray-400">Published: {{ post.created | date("M j, Y") }}</span>
            <a href="{{ path('app_profile', { id: post.author.id }) }}" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">
                {{ post.author.email }}
            </a>
        </div>

