{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block bread %}
    â†’ Login
{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg mt-10 border border-gray-100 dark:border-gray-700">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6 text-center">ðŸ‘‹ Welcome Back</h1>

        {% if error %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r shadow-sm" role="alert">
                <p class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="POST" class="space-y-5">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input type="text" id="username" name="_username" value="{{ lastUsername }}" required autofocus
                       class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2.5 border transition duration-150" />
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input type="password" id="password" name="_password" required
                       class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2.5 border transition duration-150" />
            </div>

            <input type="hidden" name="_target_path" value="/micro/post" />
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="w-full flex justify-center py-2.5 px-4 mt-6 border border-transparent rounded-md shadow-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                Log In
            </button>
        </form>

        <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400 border-t border-gray-200 dark:border-gray-700 pt-5">
            Don't have an account? <a href="{{ path('app_register') }}" class="font-semibold text-indigo-600 hover:text-indigo-500 transition duration-150">Sign Up</a>
        </div>
    </div>
{% endblock %}
