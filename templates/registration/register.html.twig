{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block bread %}
    â†’ Register
{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg mt-10 border border-gray-100 dark:border-gray-700">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6 text-center">Create an Account</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% if label == 'success' %}
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-r shadow-sm transition duration-300" role="alert">
                        <p class="font-medium flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                            {{ message }}
                        </p>
                    </div>
                {% elseif label == 'error' or label == 'danger' %}
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r shadow-sm transition duration-300" role="alert">
                        <p class="font-medium flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                            {{ message }}
                        </p>
                    </div>
                {% else %}
                    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6 rounded-r shadow-sm transition duration-300" role="alert">
                        <p class="font-medium flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                            {{ message }}
                        </p>
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}

        <div>
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2.5 border transition duration-150'}}) }}
            <div class="text-red-500 text-sm mt-1 font-medium">
                {{ form_errors(registrationForm.email) }}
            </div>
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2.5 border transition duration-150'}}) }}
            <div class="text-red-500 text-sm mt-1 font-medium">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        </div>

        <div class="flex items-center pt-2">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions.', {'label_attr': {'class': 'ml-2 block text-sm text-gray-700 dark:text-gray-300 cursor-pointer'}}) }}
            <div class="text-red-500 text-sm mt-1 font-medium">
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        </div>

        <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
            Register
        </button>

        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400 border-t border-gray-200 dark:border-gray-700 pt-5">
            Already have an account? <a href="{{ path('app_login') }}" class="font-semibold text-indigo-600 hover:text-indigo-500 transition duration-150">Log In</a>
        </div>
    </div>
{% endblock %}
