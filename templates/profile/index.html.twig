{% extends 'base.html.twig' %}

{% block title %}{{ user.userProfile.name ?? 'User Profile' }}{% endblock %}

{% block bread %}
    → User Profile
{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10">
        {# Üst Profil Kartı #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-100 dark:border-gray-700 p-8 mb-8">
            <div class="flex flex-col md:flex-row justify-between items-start gap-6">

                {# Sol Taraf: Bilgiler #}
                <div class="flex-1 text-center md:text-left w-full">
                    <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white mb-1">
                        {{ user.userProfile.name ?? 'Anonymous User' }}
                    </h1>
                    <p class="text-indigo-600 dark:text-indigo-400 font-medium mb-4">
                        @{{ user.email|split('@')[0] }}
                    </p>

                    {% if user.userProfile %}
                        <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-6 max-w-2xl">
                            {{ user.userProfile.bio ?? 'This user hasn\'t written a bio yet.' }}
                        </p>

                        {# Sosyal Bilgiler Satırı #}
                        <div class="flex flex-wrap justify-center md:justify-start gap-6 text-sm text-gray-500 dark:text-gray-400">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 mr-1.5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                                {{ user.userProfile.location ?? 'Global' }}
                            </div>

                            <div class="flex items-center">
                                <svg class="w-5 h-5 mr-1.5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                {{ user.userProfile.dateOfBirth ? user.userProfile.dateOfBirth|date("M j, Y") : 'N/A' }}
                            </div>
                        </div>
                    {% else %}
                        <p class="italic text-gray-400">Profile information not completed.</p>
                    {% endif %}
                </div>

                {# Sağ Taraf: Aksiyon Butonu #}
                {% if app.user == user %}
                    <div class="w-full md:w-auto flex justify-center">
                        <a href="{{ path('app_settings_profile') }}"
                           class="inline-flex items-center justify-center px-5 py-2.5 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            Edit Your Profile
                        </a>
                    </div>
                {% endif %}

            </div>
        </div>

        {# Alt Taraf: Kullanıcının Gönderileri #}
        <div class="space-y-6">
            <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100 border-b border-gray-200 dark:border-gray-700 pb-2">
                Posts by {{ user.userProfile.name ?? user.email }}
            </h2>

            {{ include('micro_post/_post_list.html.twig', { posts: user.posts }) }}
        </div>
    </div>
{% endblock %}
