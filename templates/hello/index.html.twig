{% extends 'base.html.twig' %}

{% block body %}

<div>
{% if messages |length > 0 %}
{% for key, message in messages  | slice(0, limit) %}
    <div>
        <a href="{{ path('app_showOne', { id: key }) }}"> {{ message.message }}</a>

    </div>
    {{ include('hello/_message.html.twig') }}

{% endfor %}
{% else %}
    <div><b>No messages found.</b></div>
{% endif %}

</div>
{% endblock %}

{% block title %}
    Title of Messages
{% endblock %}
